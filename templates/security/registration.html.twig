{%extends 'base.html.twig' %}

{%block body %}
<div class="pad">
    <p>Inscription sur le site<p>

    {{form_start(form) }}
    {{form_row(form.username, {'label':'Nom', 'attr':
    {'placeholder':'Nom'}}) }}
    {{form_row(form.email, {'label':'Adresse mail', 'attr': {
        'placeholder':'Mon Adresse Mail'
    }}) }}
    {{form_row(form.password)}}
    {{form_row(form.confirm_password) }}
    <button type="submit" class="btn btn-succes">Inscription</button>
    {{form_end(form) }}
</div>  
{% endblock %}