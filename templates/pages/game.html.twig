    <script>window.jQuery || document.write('<script src="js/vendor/jquery-1.11.0.min.js"><\/script>')</script> -->

    <script src="{{ asset('js/game/vendor/pathAnimator.js') }}"></script>
    <script src="{{ asset('js/game/main.js') }}"></script>

